.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %strong Clients
      .panel.body
        .container-fluid
          .col-md-12
            %table.table.table-hover
              %thead
                %tr
                  %th #
                  %th Name
                  %th Currency
                  %th Primary Email-Id
                  %th Phone No
                  %th= "Edit" if can? :edit, OfficeAutomationProject::Client
                     
              %tbody.rowlink{ "data-link" => "row" }
                - @clients.each_with_index do |client, index|
                  %tr
                    %td= link_to index + 1, office_automation_project.company_client_path(client.company, client)
                    %td= client.name
                    %td= client.currency
                    %td= client.primary_email_id
                    %td= client.phone_no
                    %td.rowlink-skip= link_to(content_tag(:span, "", class: "glyphicon glyphicon-edit"), office_automation_project.edit_company_client_path(current_user.company, client), class: "btn btn-default") if can? :edit, client


